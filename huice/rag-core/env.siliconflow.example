# ==========================================
# SiliconFlow 统一模型配置示例
# 复制此文件为 .env 并填入你的 API Key
# ==========================================

###########################
### Server Configuration
###########################
HOST=0.0.0.0
PORT=9621
WEBUI_TITLE="Huice Knowledge Base"
WEBUI_DESCRIPTION="Enterprise RAG System powered by SiliconFlow"

### Directory Configuration
INPUT_DIR=./inputs
WORKING_DIR=./rag_storage

###########################################################################
### LLM Configuration - SiliconFlow DeepSeek-V3
###########################################################################
LLM_BINDING=openai
LLM_MODEL=deepseek-ai/DeepSeek-V3
LLM_BINDING_HOST=https://api.siliconflow.com/v1
LLM_BINDING_API_KEY=your_siliconflow_api_key_here

# LLM 超时设置 (秒)
LLM_TIMEOUT=300

# OpenAI 兼容参数
OPENAI_LLM_MAX_COMPLETION_TOKENS=9000

###########################################################################
### Embedding Configuration - SiliconFlow BGE
### 推荐模型:
###   - BAAI/bge-large-zh-v1.5: 中文优化, 1024维, 免费
###   - BAAI/bge-m3: 多语言, 1024维, 免费, 8192 tokens
###   - Qwen/Qwen3-Embedding-0.6B: 多语言, 最高1024维, 付费
###########################################################################
EMBEDDING_BINDING=openai
EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5
EMBEDDING_DIM=1024
EMBEDDING_BINDING_HOST=https://api.siliconflow.com/v1
EMBEDDING_BINDING_API_KEY=your_siliconflow_api_key_here

# Embedding 超时设置 (秒)
EMBEDDING_TIMEOUT=120

###########################################################################
### Vision Model Configuration (可选)
### 如需视觉能力，可配置专用视觉模型
###########################################################################
# VL_BINDING=openai
# VL_MODEL=deepseek-ai/DeepSeek-V3
# VL_BINDING_HOST=https://api.siliconflow.com/v1
# VL_BINDING_API_KEY=your_siliconflow_api_key_here

###############################
### Concurrency Configuration
###############################
# 云端 API 可适当提高并发
MAX_ASYNC=4
MAX_PARALLEL_INSERT=2
# EMBEDDING_FUNC_MAX_ASYNC=8
# EMBEDDING_BATCH_NUM=10

######################################################################################
### Query Configuration
######################################################################################
ENABLE_LLM_CACHE=true
# COSINE_THRESHOLD=0.2
# TOP_K=40

########################################
### Document processing configuration
########################################
ENABLE_LLM_CACHE_FOR_EXTRACT=true
SUMMARY_LANGUAGE=Chinese

############################
### Data storage selection
############################
# 默认使用本地存储 (适合小规模部署)
# LIGHTRAG_KV_STORAGE=JsonKVStorage
# LIGHTRAG_DOC_STATUS_STORAGE=JsonDocStatusStorage
# LIGHTRAG_GRAPH_STORAGE=NetworkXStorage
# LIGHTRAG_VECTOR_STORAGE=NanoVectorDBStorage

#########################################################
### Reranking configuration (可选)
#########################################################
RERANK_BINDING=null
